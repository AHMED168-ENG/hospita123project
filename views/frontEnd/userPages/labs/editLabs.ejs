<%- include("../../include/head")  %> 
<link rel="stylesheet" href="/frontEnd/assets/css/style.css">
    <!-- Main CSS -->
	<style>
		body {
			background-color: #f8f9fa;
		}
	</style>
<%- include("../../include/naveBare")  %> 
<%- include("../../include/notification")  %> 
</head>
    </body>
        <!-- Main Wrapper -->
        <div class="main-wrapper">
			<div class="container">
				<!-- Page Wrapper -->
				<div class="page-wrapper">
					<div class="content container-fluid">
					
						<div class="row">
							<div class="col-md-12">
								<form method="post" enctype="multipart/form-data">
									<!-- Basic Information -->
									<div class="card">
										<div class="card-body">
											<h4 class="card-title">Add Your Labe Information</h4>
											<div class="row form-row">
												<div class="col-md-12">
													<div class="form-group">
														<div class="change-avatar">
															<div class="profile-img">
																<img src="/backEnd/assets/img/labsImage/<%= myLab.image ? myLab.image.split("--")[0] : "avatar.png" %>" alt=" Image">
															</div>
															<div class="upload-img">
																<div class="change-photo-btn">
																	<span><i class="fa fa-upload"></i> Labe Image</span>
																	<input type="file" class="upload" name="image">
																</div>
																<small class="form-text text-muted">Allowed JPG, GIF or PNG. Max size of 2MB</small>
															</div>
														
														</div>
														<hr>
														<div class="change-avatar">
															<div class="profile-img">
																<img src="/backEnd/assets/img/labsImage/<%= myLab.image ? myLab.confirmImage.split("--")[0] : "avatar.png" %>" alt=" confirmImage">
															</div>
															<div class="upload-img">
																<div class="change-photo-btn">
																	<span><i class="fa fa-upload"></i> Confirm Image</span>
																	<input type="file" class="upload" name="confirmImage">
																</div>
																<small class="form-text text-muted">Allowed JPG, GIF or PNG. Max size of 2MB</small>
															</div>
														
														</div>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label>phone <span class="text-danger">*</span></label>
														<input name="phone" value="<%= myLab.phone %>" type="text" class="form-control">
														<% if (validationError) { %>
															<% if (validationError.phone) { %>
																<span class="text-danger"><%=validationError.phone[0].msg %></span>
															<% } %>
														<% } %>  
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label>name <span class="text-danger">*</span></label>
														<input name="name" value="<%= myLab.name %>" type="text" class="form-control">
														<% if (validationError) { %>
															<% if (validationError.name) { %>
																<span class="text-danger"><%=validationError.name[0].msg %></span>
															<% } %>
														<% } %>  
													</div>
												</div>
								
												<div class="col-md-6">
													<div class="form-group">
														<label>village <span class="text-danger">*</span></label>
														<input name="village"  value="<%= myLab.village %>" type="text" class="form-control">
														<% if (validationError) { %>
															<% if (validationError.village) { %>
																<span class="text-danger"><%=validationError.village[0].msg %></span>
															<% } %>
														<% } %>  
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label>province <span class="text-danger">*</span></label>
														<input name="province"  value="<%= myLab.province %>"  type="text" class="form-control">
														<% if (validationError) { %>
															<% if (validationError.province) { %>
																<span class="text-danger"><%=validationError.province[0].msg %></span>
															<% } %>
														<% } %>  
													</div>
												</div>

												<div class="col-md-6">
													<div class="form-group">
														<label>Start <span class="text-danger">*</span></label>
														<input name="start"  value="<%= myLab.start %>"  type="text" class="form-control">
														<% if (validationError) { %>
															<% if (validationError.start) { %>
																<span class="text-danger"><%=validationError.start[0].msg %></span>
															<% } %>
														<% } %>  
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label>End <span class="text-danger">*</span></label>
														<input name="end"  value="<%= myLab.end %>"  type="text" class="form-control">
														<% if (validationError) { %>
															<% if (validationError.end) { %>
																<span class="text-danger"><%=validationError.end[0].msg %></span>
															<% } %>
														<% } %>  
													</div>
												</div>
										
												
											</div>
										</div>
									</div>
									<!-- /Basic Information -->

							
									<div class="submit-section submit-btn-bottom">
										<button type="submit" class="btn btn-primary submit-btn">Save Changes</button>
									</div>
								</form>
							</div>
						</div>
					</div>			
				</div>
				<!-- /Page Wrapper -->
			</div>

        <%- include("../../include/footer_script")  %> 

    </head>
</body>